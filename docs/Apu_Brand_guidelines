--purple-400: #c084fc;
--purple-500: #a855f7;
--purple-600: #9333ea;
--purple-700: #7c3aed;
--purple-800: #6b21a8;
--purple-900: #581c87;

/* Emerald Spectrum */
--emerald-50: #ecfdf5;
--emerald-100: #d1fae5;
